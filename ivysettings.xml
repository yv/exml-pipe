<?xml version="1.0" encoding="ISO-8859-1"?>
<ivysettings>
    <settings defaultResolver="chain"/>
    <resolvers>
        <chain name="chain">
            <ibiblio name="central" m2compatible="true"/>
            <ibiblio name="UniHD" m2compatible="true" root="http://maven.cl.uni-heidelberg.de/repository/"/>
            <ibiblio name="share-m2-in" m2compatible="true"
                    root="file://${user.home}/.m2/repository/"/>
        </chain>
        <filesystem name="share-m2" m2compatible="true">
        	<artifact pattern="${user.home}/.m2/repository/[organisation]/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]"/>
        </filesystem>
    </resolvers>
</ivysettings>
